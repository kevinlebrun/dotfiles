# append to the history file, don't overwrite it
shopt -s histappend

#HISTFILESIZE=20000
unset HISTFILESIZE
HISTSIZE=10000
HISTCONTROL=ignoreboth
HISTIGNORE="ls:[bf]g:history:exit:reset:clear:cd *"
HISTTIMEFORMAT="%F %T "

# merge multiline commands in history into one line
shopt -s cmdhist

export PROMPT_COMMAND='history -a'

# vim: set syn=sh :
