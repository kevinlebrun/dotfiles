alias reload="source $SMILE/bash/aliases"
alias ea="vim $SMILE/bash/aliases && reload"

# enable color support of ls and also add handy aliases
if [ -x /usr/bin/dircolors ]; then
    test -r ~/.dircolors && eval "$(dircolors -b ~/.dircolors)" || eval "$(dircolors -b)"
    alias ls='ls --color=auto'
    alias dir='dir --color=auto'
    alias vdir='vdir --color=auto'

    alias grep='grep --color=auto'
    alias fgrep='fgrep --color=auto'
    alias egrep='egrep --color=auto'
fi

alias l='ls -lah'
alias ..='cd ..'
alias ...='cd ../..'
alias p='pushd'
alias o='popd'

alias t='tmux'
alias s='screen'
alias sr='screen -r'

# apache2 aliases
alias a2='sudo invoke-rc.d apache2'

# PHP
alias pu='phpunit'
alias be='behat'

alias plint="find . -name \*.phtml -o -name \*.php -exec php -l {} \\;"

# MongoDB
alias mgd="mongod --dbpath=/data/mongodb/ --logpath /var/log/mongodb/mongodb.log --logappend --fork --rest"

# Mercurial
alias hcl='hg clone'
alias hpu='hg pull -u'
alias hp='hg push'
alias hs='hg status'

alias hc='hg commit'
alias hl='hg log'
alias hb='hg branch'
alias hba='hg branches'
alias hd='hg diff'
alias hu='hg update'
alias hr='hg resolve'
alias hin='hg inc'
alias hout='hg out'

alias hla='hg latest | column -s "|" -t'
alias hclean='find . -name \*.orig -exec rm {} \;'

# Git
alias g='git'

alias gcl='git clone'
alias gpu='git pull'
alias gp='git push'
alias gs='git status'

alias gc='git commit'
alias gl='git log'
alias gb='git branch'
alias gd='git diff'
alias ga='git add'
alias gaa='git add --all'
alias gco='git checkout'

function hstat {
    history | awk '{a[$4]++} END {for(i in a){print a[i] " " i}}' | sort -rn | head
}

function psu {
    ps -ef | awk '{print $1}' | sort | uniq -c | sort -rn
}
