[user]
    name = Kevin Le Brun
    email = lebrun.k@gmail.com
[core]
    editor = vim
    excludesfile = ~/.gitignore
    pager = less -FXR
    whitespace = trailing-space,space-before-tab
[color]
    ui = auto
[advice]
    pushNonFastForward = false
    statusHints = false
[alias]
    c = commit -v
    amend = commit --amend -C HEAD
    authors = "!git log --pretty=format:%aN | sort | uniq -c | sort -rn"
    changes = diff --name-status -r
    fuck = reset --hard
    l = "log --oneline --decorate --graph"
    lp = log --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
    ls-ignored = ls-files --exclude-standard --ignored --others
    msg = commit --allow-empty -m
    news = log -p HEAD@{1}..HEAD@{0}
    push = push --tags
    s = status --short --branch
    undo = reset --soft HEAD@{1}
    rm-unstaged-stash = "!git stash --keep-index & git stash drop"
    rm-unstaged = "checkout --"
    sweep = "!git clean -df & git checkout -- ."
[github]
    user = kevinlebrun
[push]
    default = tracking
[merge]
    stat = true
    diff = vimdiff
[pager]
    color = true
[status]
    submodulesummary = true
[diff]
    renames = copies
    mnemonicprefix = true
[diff "zip"]
    textconv = unzip -c -a
[branch]
    autosetupmerge = true
[rerere]
    enabled = true
