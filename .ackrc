# lexically sort filenames
--sort-files

--type-add=ruby=rake,haml
--type-add=vim=vimrc
--type-add=js=json,jade

# add types ack doesn't know about
--type-set=MARKDOWN=md,mkd,markdown
--type-set=RDOC=rdoc
--type-set=styl=sass,less,styl
--type-set=coffee=coffee
--type-set=phtml=phtml

--ignore-dir=build
--ignore-dir=vendor
--ignore-dir=log
--ignore-dir=cache
